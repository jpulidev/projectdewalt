
<div class="vitaly-section-heading" style="    max-width: 728px;
    margin: 0 auto;
    text-align: center;">

<div class="vitaly-text-section1">{{section.settings.description}}
  {{section.settings.description2}}
  {{section.settings.description3}}
</div>
</div>


<div class="block-grid">
  <h1 class="safety-heading">{{section.settings.description4}}</h1>
  <div class="grid-block-items">
    
  {%for block in section.blocks%}
 
  
<div class="block-items">
   <p class="btn-safety">{{block.settings.heading}}</p>
  
  <ul class="list-safety" style="list-style-position: outside;">
    
    {{block.settings.heading2}}
   
  </ul>
   
  </div>
 
 
   
