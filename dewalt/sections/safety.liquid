<style>
  
  .safety-heading{
      text-align: center;
    font-size: 2.5em;
    font-weight: 800;
    color: #fff;
    position: relative;
    top: 60px;
  
  }
  .list-safety>p{
  margin: 10px;
    font-size: 13px;
    font-family: 'helvetica'!important;
    font-weight: 400;
  }
  
  .vitaly-text-section1>p{
  margin-bottom: 7%;
  }
  
  .vitaly-text-section1{margin-bottom: 21%;}
  
  .block-grid{
  background: #3a3737;
    color: #fff;
  }  

  .grid-block-items{
  
    max-width: 900px;
    margin: 0 auto;
    padding: 5% 0px;
    grid-template-columns: repeat(4, 1fr);
    display: grid;
    grid-gap: 30px;
    line-height: 1.2;
 
  }
  .btn-safety{
    text-align: center;
    padding: 13px 30px;
    background: #febd17;
    color: #000;
    font-size: 1.4em;
    font-weight: 800;
    border-radius: 20px;
    font-family: 'helvetica'!important;
  }
  
  @media screen and (max-width:1000px){
  .vitaly-text-section1 {
    padding: 5%;
}
    .grid-block-items{
    grid-template-columns: 1fr 1fr!important;
      padding: 5%!important;
    margin-top: 14%!important;
      text-align: center;
    }
    
    .last-block{
    left:0px!important;
    }
    
    .itemmobile1{
    grid-column: 2!important;
    }
    .itemmobile2{
    grid-column: 1!important;
    }
  
  
  }
  
</style>


